# Database Configuration
DATABASE_URL="file:./dev.db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"

# Security Provider Configuration
# Choose one of: hashicorp_vault, azure_keyvault, akeyless, gcp_secret_manager, aws_secrets_manager
SECURITY_PROVIDER="hashicorp_vault"

# HashiCorp Vault Configuration
VAULT_URL="https://vault.example.com"
VAULT_TOKEN="hvs.XXXXXXXXXXXX"
VAULT_NAMESPACE="admin"
VAULT_PATH="secret/data/mcp"
VAULT_MOUNT="kv"

# Vault SSL/TLS Configuration (choose one option)
# Option 1: Disable SSL verification (NOT recommended for production)
VAULT_SKIP_VERIFY="false"

# Option 2: Provide custom CA certificate file path
# VAULT_CACERT="/path/to/ca-certificate.pem"

# Option 3: Provide CA certificate content directly (base64 encoded)
# VAULT_CA_CERT_CONTENT="LS0tLS1CRUdJTi..."

# Azure KeyVault Configuration
AZURE_KEYVAULT_URL="https://myvault.vault.azure.net/"
AZURE_TENANT_ID="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# LLM Configuration (Secure Fixed Environment Variables)
# Provider selection
LLM_PROVIDER="openai"  # or "ollama"
LLM_MODEL="gpt-4o-mini"  # or "llama3.2" for Ollama

# ======================================
# OpenAI Configuration (Fixed Variables)
# ======================================

# Required: OpenAI API Key
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Optional: Proxy URL (takes priority over base URL)
# OPENAI_PROXY_URL="https://your-proxy.com/openai"

# Optional: Custom Base URL (fallback if no proxy)
# OPENAI_BASE_URL="https://api.openai.com/v1"

# Optional: Custom Headers (JSON format)
# OPENAI_CUSTOM_HEADERS="{\"X-Proxy-Authorization\":\"Bearer your-proxy-token\",\"X-Custom-Route\":\"openai-route\"}"

# Optional: SSL Certificate Configuration
# OPENAI_CA_BUNDLE="/path/to/ca-bundle.pem"
# OPENAI_CLIENT_CERT="/path/to/client.crt"
# OPENAI_CLIENT_KEY="/path/to/client.key"
# OPENAI_REJECT_UNAUTHORIZED="false"

# ======================================
# Ollama Configuration (Fixed Variables)
# ======================================

# Optional: Proxy URL for Ollama (takes priority over base URL)
# OLLAMA_PROXY_URL="https://your-proxy.com/ollama"

# Optional: Custom Ollama Base URL (default: http://localhost:11434/v1)
# OLLAMA_BASE_URL="http://remote-ollama:11434/v1"

# Optional: Custom Headers for Ollama (JSON format)
# OLLAMA_CUSTOM_HEADERS="{\"X-Proxy-Authorization\":\"Bearer your-proxy-token\",\"X-Custom-Route\":\"ollama-route\"}"
AZURE_CLIENT_ID="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
AZURE_CLIENT_SECRET="your-client-secret"

# Akeyless Configuration
AKEYLESS_URL="https://api.akeyless.io"
AKEYLESS_ACCESS_ID="p-xxxxxxxx"
AKEYLESS_ACCESS_KEY="your-access-key"
AKEYLESS_PATH="/mcp/secrets"

# Google Cloud Secret Manager Configuration
GCP_PROJECT_ID="your-project-id"
GCP_SERVICE_ACCOUNT_KEY_PATH="/path/to/service-account.json"
GCP_SECRET_PATH_PREFIX="mcp-secrets"

# AWS Secrets Manager Configuration
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
AWS_SECRETS_PATH_PREFIX="mcp/secrets"

# Application Configuration
NODE_ENV="development"
PORT=3000
